{
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "outDir": "build/dist",
    "target": "ES2020",
    "types": ["module"],
    "lib": [
      "ES6",
      "DOM",
      "ESNext.AsyncIterable"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "ignoreDeprecations": "5.0",
    "noUnusedLocals": true,
    "skipLibCheck": true
  }
}